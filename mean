sumValue = 0
counter = 0
while True:
    inp = input("Enter an integer: ")
    if inp.lower() == 'q' or inp.lower() == 'quit':
        break
    if not inp.isdigit():
        continue
    else:
        sumValue += int(inp)
        print(sumValue)
        counter += 1
meanValue = sumValue / counter
print(meanValue)

